<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_back_monthly_chart_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:src="@mipmap/it_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/chart_title"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_calendar_monthly_chart_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/it_rili" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="10dp"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/tv_time_monthly_chart_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020 11 "
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/tv_expenses_monthly_chart_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" an expenditure,£11.0 "
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tv_income_monthly_chart_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A total of 2 incomes,£11.0 "
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:gravity="center"
            >
            <Button
                android:id="@+id/btn_month_chart_expenses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expenses"
                android:background="@drawable/main_recordbtn_background"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginEnd="10dp"/>
            <Button
                android:id="@+id/btn_month_chart_income"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/income"
                android:background="@drawable/dialog_button_background"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_month_chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />


    </LinearLayout>


</LinearLayout>