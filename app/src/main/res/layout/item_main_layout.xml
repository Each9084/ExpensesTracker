<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:background="@color/white"
    >
    
    <ImageView
        android:id="@+id/iv_item_main_layout"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@mipmap/ic_yanjiu_fs"/>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_item_main_layout"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <!--烟酒-->
        <TextView
            android:id="@+id/tv_item_main_layout_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tobacco and alcohol"
            android:textStyle="bold"
            android:textSize="16sp"
            />
        <!--备注-->
        <TextView
            android:id="@+id/tv_item_main_layout_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="华子一盒"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <!--烟酒-->
        <TextView
            android:id="@+id/tv_item_main_layout_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="£25.0"
            android:textStyle="bold"
            />
        <!--备注-->
        <TextView
            android:id="@+id/tv_item_main_layout_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today 18:10"
            android:textSize="12sp"
            />

    </LinearLayout>



</RelativeLayout>