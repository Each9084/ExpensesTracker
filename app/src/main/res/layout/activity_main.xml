<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_f3f3f3">

    <RelativeLayout
        android:id="@+id/main_top_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageButton
            android:id="@+id/main_btn_sidebar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_btn_more"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:background="@drawable/main_morebtn_background"
            android:contentDescription="more"
            />
        <TextView
            android:text="@string/app_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/main_btn_sidebar"
            android:gravity="center"
            android:padding="10dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"/>

        <!--右上角搜索按钮-->
        <ImageView
            android:id="@+id/main_iv_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_search"
            android:layout_alignParentEnd="true"
            android:padding="10dp"/>

    </RelativeLayout>

    <!--未来尝试换成RecyclerView-->
    <ListView
        android:id="@+id/lv_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_top_layout"
        android:layout_marginTop="10dp"
        android:background="@color/grey_f3f3f3"
        android:divider="@null"
        android:dividerHeight="6dp"
        android:padding="10dp"
        android:scrollbars="none" />

    <!--在 ListView 上方叠加的 ImageView-->
    <ImageView
        android:id="@+id/image_overlay"
        android:layout_width="400dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/list_gress_background_bottom" /> <!-- 更换为您的图片资源 -->

    <!--START按钮-->
    <Button
        android:id="@+id/main_btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/selector_start_button"
        android:text="@string/edit"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:drawableLeft="@mipmap/ic_edit"
        android:paddingStart="10dp"
        android:drawablePadding="10dp"
        android:paddingEnd="15dp"
        android:gravity="center_vertical"
        />

</RelativeLayout>
